<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vpopovic.chataplication2017.activity.CreateConversationActivity">

    <android.support.design.widget.TextInputLayout

        android:hint="conversation name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/conversationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</android.support.design.widget.TextInputLayout>

    <Button
        android:text="Create conversation"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:id="@+id/createConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>